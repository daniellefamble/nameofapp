<body class="contact-page">
	<div class="container-fluid">
		<%= image_tag("Bicycle.png", class: "img-responsive my-image", id: "brand-image") %>
	</div>
	<div class="container-fluid col-xs-12 col-md-8 contact_left">
	<%= flash[:notice] %>
	<%= form_tag("/static_pages/thank_you") do %>
		<div class="form-group">
			<%= label_tag :name %>
			<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
		</div>
		<div class="form-group">
			<%= label_tag :email, "Email Address" %>
			<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
		</div>
		<div class="form-group">
			<%= label_tag :message %>
			<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
		</div>	
		<%= submit_tag "Send", class: "btn btn-success" %>
	<% end %>
	</div><!-- END CONTACT LEFT -->

	<div class="container-fluid col-xs-12 col-md-4 contact_right">
		<h3>Contact Us</h3>
		<p>We can't wait to hear from you!</p>
		<ul class="list-unstyled">
			<li>
				<span class="glyphicon glyphicon-map-marker"></span>
				<span>Reiler Str. 72, 16235 Berlin, Germany</span>
			</li>
			<li>
				<span class="glyphicon glyphicon-envelope"></span>
				<span><%= mail_to("hallo@bikeberlin.de", "hallo@bikeberlin.de") %></span>
			</li>
			<li>
				<span class="glyphicon glyphicon-earphone"></span>
				<span><a href="tel:+49 111 1111111">+49 111 1111111</span>
			</li>
		</ul>
	</div><!-- END CONTACT RIGHT -->
</body>
