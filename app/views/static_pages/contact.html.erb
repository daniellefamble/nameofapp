<body class="contact-page">
	<div class="container-fluid">
		<%= image_tag("Bicycle.png", class: "img-responsive my-image", id: "brand-image") %>
	</div>
	<div class="container-fluid col-xs-12 col-md-8 contact_left">
		<form>
			<div class="form-group">
				<label for="name">Your Name (Required)</label>
				<input class="form-control" type="text" placeholder="Enter Name (Required)" id="InputName" title="Enter your Name" required="required"></input>
			</div>
			<div class="form-group">
				<label for="email">Your Email (Required)</label>
				<input class="form-control" type="email" placeholder="Enter Email (Required)" id="InputEmail" required="required" title="Enter your Email"></input>
			</div>
			<div class="form-group">
				<label for="subject">Subject</label>
				<input class="form-control" type="text" placeholder="Enter your subject" id="InputSubject" title="Enter your subject">
			</div>
			<div class="form-group">
				<label for="message">Message</label>
				<textarea class="form-control" style="resize:none" cols="40" rows="5" placeholder="Enter your message here" id="InputMessage" title="Enter your message here" class="message-box"></textarea>
			</div>
			<button type="button" class="btn btn-success">Submit</button>
		</form>
	</div>

	<div class="container-fluid col-xs-12 col-md-4 contact_right">
		<h3>Contact Us</h3>
		<p>We can't wait to hear from you!</p>
		<ul class="list-unstyled">
			<li>
				<span class="glyphicon glyphicon-map-marker"></span>
				<span>Reiler Str. 72, 16235 Berlin, Germany</span>
			</li>
			<li>
				<span class="glyphicon glyphicon-envelope"></span>
				<span><%= mail_to("hallo@bikeberlin.de", "hallo@bikeberlin.de") %></span>
			</li>
			<li>
				<span class="glyphicon glyphicon-earphone"></span>
				<span><a href="tel:+49 111 1111111">+49 111 1111111</span>
			</li>
			
		</ul>
	</div>
</body>
