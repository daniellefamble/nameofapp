<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= image_tag(@product.image_url, class: "img-responsive", id: "product-img") %>
    </div>
    <div class="col-xs-6 col-md-4">
      <h2><%= @product.name %></h2>
      <h4><%= @product.price %></h4>
      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row col-xs-12">
    <p>
      <strong>Customer Reviews:</strong><hr>
      <strong>Top Positive Review:</strong><%= @product.higest_rating_comment %><br>
      <strong>Top Critical Review:</strong><%= @product.lowest_rating_comment %>
    </p>
  </div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
