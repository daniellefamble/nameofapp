<!DOCTYPE html>
<html>
	<head>
	  <title>Nameofapp</title>
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button><!-- END BUTTON -->
					<%= link_to("Bike Berlin", root_path, "class" => 'navbar-brand') %>
				</div><!-- END NAVBAR-HEADER -->
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav navbar-right">
							<li>
								<%= form_tag("/products", method: "get", class: "navbar-form") do %>
									<%= label_tag(:q, "Search for:") %>
									<%= text_field_tag(:q) %>
									<%= submit_tag("Search", class: "btn btn-default") %>
								<% end %>
							</li>
							<li>
								<%= link_to("About", static_pages_about_path) %>
							</li>
							<li>
								<%= link_to("Contact", static_pages_contact_path) %>
							</li>
						</ul><!-- END UL NAV -->
						<ul class="nav pull-right">
							<li>
							<% if user_signed_in? %>
								<%= link_to('Logout', destroy_user_session_path, :method=> :delete) %>
							<% else %>
								<%= link_to('Login', new_user_session_path) %>
							<% end %>			
							</li>
						</ul>
					</div><!-- END NAVBAR-COLLAPSE -->
			</div><!-- END CONTAINER-FLUID -->
		</nav><!-- END NAV -->
		<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>
		
		<%= yield %>

		<footer class="footer">
			<div class="container-fluid">
				<p class="footer-content">
					&copy; 2016 Bike Berlin
				</p><!-- END FOOTER CONTENT -->
			</div><!-- END FOOTER DIV -->
		</footer><!-- END FOOTER -->
	</body>
</html>